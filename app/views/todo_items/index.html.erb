<div class="body">
  <style>
    @import url('https://fonts.googleapis.com/css?family=Syncopate');
  </style>

  <p id="notice"><%= notice %></p>
  <div class="container">
    <h1 class="Title">Todo Items</h1>

    <table>
      <thead>
        <tr>
          <th class="description">Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @todo_items.each do |todo_item| %>
        <tr>
          <td><%= todo_item.description %></td>
          <td><%= link_to 'Show', todo_item %></td>
          <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
          <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <div class="new_todo_item">
      <%= link_to 'New Todo Item', new_todo_item_path %>
    </div>
  </div>
</div>
